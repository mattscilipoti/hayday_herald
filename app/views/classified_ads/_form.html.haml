= simple_form_for @classified_ad, :html => {:class => 'classified_ad'} do |f|
  .row_fluid
    -if @classified_ad.errors.any?
      #error_explanation.span12
        %h2= "#{pluralize(@classified_ad.errors.count, "error")} prohibited this classified_ad from being saved:"
        %ul
          - @classified_ad.errors.full_messages.each do |msg|
            %li= msg
  .row_fluid
    #items_area.span12
      %ul.horizontal
        - Item.order(:name).all.each do |item|
          %li
            = f.label "item_id_#{item.id}" do
              = item.name
              = f.radio_button(:item_id, item.id)
              = image_tag item.image_name, :class => 'thumbnail'

  .row_fluid.clear
    .span6
      %hr
      #quantity_area
        =f.input :quantity, :input_html => {:min => 1, :max => 10}

        -#%ul#quantity_choices.horizontal.js-hide
          -(1..10).each do |qty|
            %li.circle
              =f.radio_button(:quantity, qty)
              =f.label "quantity_#{qty}" do
                =qty

      %hr
      #total_cost_area.clear
        =f.input :total_cost, :as => :currency, :input_html => {:min => 1}

    .span6
      %hr
      -usernames = Ad.all.collect(&:username).uniq.compact
      =f.input :username, :input_html => {:data => {:usernames => usernames}}

  .row_fluid.clear
    =f.button :submit
